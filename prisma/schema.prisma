generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

enum Provider {
  GOOGLE
  EMAIL
}

model User {
  id             String   @id @default(uuid())
  provider       Provider
  name           String
  email          String   @unique
  hashedPassword String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
